<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree -->
    <record id="view_salary_rule_code_tree" model="ir.ui.view">
        <field name="name">salary.rule.code.tree</field>
        <field name="model">salary.rule.code</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- Form -->
    <record id="view_salary_rule_code_form" model="ir.ui.view">
        <field name="name">salary.rule.code.form</field>
        <field name="model">salary.rule.code</field>
        <field name="arch" type="xml">
            <form string="Salary Rule Code">
                <sheet>
                    <div id="s_header">
                        <h1>Salary Rule Code</h1>
                    </div>
                    <group col="4">
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_salary_rule_code" model="ir.actions.act_window">
        <field name="name">Salary Rule Code</field>
        <field name="res_model">salary.rule.code</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
