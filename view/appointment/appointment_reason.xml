<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree -->
    <record id="view_appointment_reason_tree" model="ir.ui.view">
        <field name="name">appointment.reason.tree</field>
        <field name="model">appointment.reason</field>
        <field name="arch" type="xml">
            <tree string="Appointment Reason">
                <field name="name"/>
                <field name="appointment_type"/>
            </tree>
        </field>
    </record>

    <!-- Form -->
    <record id="view_appointment_reason_form" model="ir.ui.view">
        <field name="name">appointment.reason.form</field>
        <field name="model">appointment.reason</field>
        <field name="arch" type="xml">
            <form string="Appointment Reason">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="appointment_type"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_appointment_reason" model="ir.actions.act_window">
        <field name="name">Appointment Reason</field>
        <field name="res_model">appointment.reason</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
