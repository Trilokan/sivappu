<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree -->
    <record id="view_arc_language_tree" model="ir.ui.view">
        <field name="name">arc.language.tree</field>
        <field name="model">arc.language</field>
        <field name="arch" type="xml">
            <tree string="Language">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- Form -->
    <record id="view_arc_language_form" model="ir.ui.view">
        <field name="name">arc.language.form</field>
        <field name="model">arc.language</field>
        <field name="arch" type="xml">
            <form string="Language">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_arc_language" model="ir.actions.act_window">
        <field name="name">Language</field>
        <field name="res_model">arc.language</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
