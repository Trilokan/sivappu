<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree -->
    <record id="view_hr_department_tree" model="ir.ui.view">
        <field name="name">hr.department.tree</field>
        <field name="model">hr.department</field>
        <field name="arch" type="xml">
            <tree string="Department">
                <field name="name"/>
                <field name="head_id"/>
            </tree>
        </field>
    </record>

    <!-- Form -->
    <record id="view_hr_department_form" model="ir.ui.view">
        <field name="name">hr.department.form</field>
        <field name="model">hr.department</field>
        <field name="arch" type="xml">
            <form string="Department">
                <sheet>
                    <div id="s_header">
                        <h1>Department</h1>
                    </div>
                    <group>
                        <field name="name"/>
                        <field name="head_id"/>
                        <field name="location_id"/>
                    </group>
                    <field name="member_ids" readonly="1"/>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_hr_department" model="ir.actions.act_window">
        <field name="name">Department</field>
        <field name="res_model">hr.department</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
