<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree -->
    <record id="view_arc_order_sale_tree" model="ir.ui.view">
        <field name="name">arc.order.sale.tree</field>
        <field name="model">arc.order</field>
        <field name="arch" type="xml">
            <tree string="Sale Order">
                <field name="date"/>
                <field name="name"/>
                <field name="progress"/>
            </tree>
        </field>
    </record>

    <!-- Form -->
    <record id="view_arc_order_sale_form" model="ir.ui.view">
        <field name="name">arc.order.sale.form</field>
        <field name="model">arc.order</field>
        <field name="arch" type="xml">
            <form string="Sale Order">
                <sheet>
                    <div id="s_header">
                        <h1>Sale Order</h1>
                    </div>
                    <field name="progress" widget="statusbar" style="float: right;padding: 20px;"/>
                    <h2><field name="name"/></h2>
                    <group col="4">
                        <field name="date" attrs="{'readonly': [('progress', '!=', 'draft')]}"/>
                        <field name="person_id" attrs="{'readonly': [('progress', '!=', 'draft')]}"/>
                        <field name="vs_id" invisible="1"/>
                        <field name="quotation_id" invisible="1"/>
                        <field name="order_type" invisible="1"/>
                    </group>
                    <field name="order_detail" attrs="{'readonly': [('progress', '!=', 'draft')]}">
                        <tree editable="bottom">
                            <field name="product_id"/>
                            <field name="uom_id" readonly="1"/>
                            <field name="quantity"/>
                            <field name="unit_price"/>
                            <field name="discount"/>
                            <field name="tax_id"/>
                            <field name="total" string="Amount"/>
                            <field name="order_id" invisible="1"/>
                            <field name="progress" invisible="1"/>
                        </tree>
                        <form>
                            <div id="s_header">
                                <h1>Sale Order Detail</h1>
                            </div>
                            <group>
                                <field name="product_id"/>
                                <field name="description"/>
                                <field name="uom_id"/>
                                <field name="quantity"/>
                                <field name="unit_price"/>
                                <field name="discount"/>
                                <field name="tax_id"/>
                                <field name="order_id" invisible="1"/>
                                <field name="total" string="Amount"/>
                            </group>
                        </form>
                    </field>
                    <group>
                        <div style="float: left; width: 100%;">
                            <table id="time_bar">
                                <tr>
                                    <th>sgst</th>
                                    <th>cgst</th>
                                    <th>igst</th>
                                </tr>
                                <tr>
                                    <td align="right"><field name="sgst" nolabel="1"/></td>
                                    <td align="right"><field name="cgst" nolabel="1"/></td>
                                    <td align="right"><field name="igst" nolabel="1"/></td>
                                </tr>
                            </table>

                            <br></br>
                            <table id="time_bar">
                                <tr>
                                    <th>Taxed Amount</th>
                                    <td align="right"><field name="tax_amount" nolabel="1"/></td>
                                </tr>
                                <tr>
                                    <th>Un Taxed Amount</th>
                                    <td align="right"><field name="un_tax_amount" nolabel="1"/></td>
                                </tr>
                            </table>

                        </div>


                        <div style="float: right; width: 70%;">
                            <table id="time_bar">
                                <tr>
                                    <th>Sub Total</th>
                                    <td align="right"><field name="sub_total_amount" nolabel="1"/></td>
                                </tr>
                                <tr>
                                    <th>Discount</th>
                                    <td align="right"><field name="discount_amount" nolabel="1"/></td>
                                </tr>
                                <tr>
                                    <th>Total (after Discount)</th>
                                    <td align="right"><field name="others" nolabel="1"/></td>
                                </tr>
                                <tr>
                                    <th>Tax</th>
                                    <td align="right"><field name="tax_amount" nolabel="1"/></td>
                                </tr>
                                <tr>
                                    <th>Round-Off</th>
                                    <td align="right"><field name="round_off" nolabel="1"/></td>
                                </tr>
                                <tr>
                                    <th style="font-size: 25px">Grand Total</th>
                                    <td align="right" style="font-size: 25px"><b><field name="grand_amount" nolabel="1"/></b></td>
                                </tr>
                            </table>
                        </div>


					</group>

                    <div style="width: 50%;">
                            <table id="time_bar">
                                <tr>
                                    <th colspan="2" style="text-align: center; font-size: 20px;">Terms And Conditions</th>
                                </tr>
                                <tr>
                                    <th style="width: 20px;">Expected Delivery</th>
                                    <td><field name="expected_delivery" nolabel="1"/></td>
                                </tr>
                                <tr>
                                    <th>Freight</th>
                                    <td><field name="freight" nolabel="1"/></td>
                                </tr>
                                <tr>
                                    <th>Payment</th>
                                    <td><field name="payment" nolabel="1"/></td>
                                </tr>
                                <tr>
                                    <th>Insurance</th>
                                    <td><field name="insurance" nolabel="1"/></td>
                                </tr>
                                <tr>
                                    <th>Certificate</th>
                                    <td><field name="certificate" nolabel="1"/></td>
                                </tr>
                                <tr>
                                    <th>Warranty</th>
                                    <td><b><field name="warranty" nolabel="1"/></b></td>
                                </tr>
                            </table>
                        </div>

                    <br></br>


                    <footer>
                        <button name="trigger_update_total" string="Total Calculation" type="object"/>
                        <button name="trigger_cancel" string="Cancel" type="object"
                                attrs="{'invisible': [('progress', '!=', 'draft')]}"/>
                        <button name="trigger_confirm" string="Confirm" type="object"
                                attrs="{'invisible': [('progress', '!=', 'draft')]}"/>
                        <button name="trigger_approve" string="Approve" type="object"
                                attrs="{'invisible': [('progress', '!=', 'confirmed')]}"/>
                    </footer>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_arc_order_sale" model="ir.actions.act_window">
        <field name="name">Sale Order</field>
        <field name="res_model">arc.order</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('order_type', '=', 'sale')]</field>
        <field name="context">{'default_order_type': 'sale'}</field>
        <field name="view_id" ref="view_arc_order_sale_tree"/>
    </record>

    <record model="ir.actions.act_window.view" id="action_arc_order_sale_form">
        <field eval="2" name="sequence"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_arc_order_sale_form" />
        <field name="act_window_id" ref="action_arc_order_sale"/>
    </record>

    <record model="ir.actions.act_window.view" id="action_arc_order_sale_tree">
        <field eval="1" name="sequence"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_arc_order_sale_tree"/>
        <field name="act_window_id" ref="action_arc_order_sale"/>
    </record>


</odoo>
